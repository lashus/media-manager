<div class="col-xs-12 col-md-6" role="application">
    <legend>{{ i18n.file_title }}</legend>

    <div class="file-preview">
        {{# imagePreview}}
            <img src="{{ path }}" class="img-responsive" />
        {{/imagePreview}}
        {{# audioPreview}}
            <audio controls>
                <source src="{{ path }}" type="{{ type }}">
                Your browser does not support the audio element.
            </audio>
        {{/audioPreview}}
        {{# videoPreview}}
            <video controls>
                <source src="{{ path }}" type="{{ type }}">
                Your browser does not support the video element.
            </video>
        {{/videoPreview}}

        {{# noPreview}}
            <div class="placeholder">
                <i class="icon icon-cancel"></i>
                <h3>{{ i18n.file.no_preview }}</h3>
            </div>
        {{/noPreview}}
    </div>

    <div class="file-info">
        <small>{{ i18n.file.size }}: {{ sizeWithUnit }}<br />
        <small>{{ i18n.file.created }}: {{ date }}</small>
    </div>
</div>